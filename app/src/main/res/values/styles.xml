<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:colorBackground">@color/background_material_dark</item>
    </style>

    <style name="SayfeTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:colorBackground">@color/background_sayfe</item>
        <item name="android:textColorPrimary">@color/primary_text_sayfe</item>
    </style>

</resources>
