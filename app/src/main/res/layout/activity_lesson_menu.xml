<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="I'M HERE TO LEARN"
                android:textColor="#C7436A"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/learnTextView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="48dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Pick a\nLesson"
                android:gravity="center_horizontal"
                android:textSize="45sp"
                android:textStyle="bold"
                android:id="@+id/LessonTextView"
                android:layout_below="@+id/learnTextView"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:src="@drawable/home_button"
                android:background="@null"
                android:onClick="toMenu"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/header1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:id="@+id/header1"
                android:src="@drawable/empty_template"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="32dp"
                android:paddingBottom="0dp"
                android:layout_below="@+id/LessonTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I&apos;m Ready for the Quiz"
                android:id="@+id/button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="#BCBEC0"
                android:textColor="#FFFFFFFF"
                android:textStyle="bold"
                android:onClick="toQuiz"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1"
                android:id="@+id/textView6"
                android:layout_alignLeft="@id/header1"
                android:textSize="40sp"
                android:paddingTop="270dp"
                android:paddingLeft="36dp"
                android:textColor="#FFFFFFFF"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Basics of Consent"
                android:id="@+id/textView7"
                android:textColor="#000000"
                android:layout_alignLeft="@+id/learnTextView"
                android:layout_alignStart="@+id/learnTextView"
                android:layout_alignTop="@id/header1"
                android:layout_marginTop="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="7 LESSONS"
                android:id="@+id/textView8"
                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/LessonTextView"
                android:layout_alignStart="@+id/LessonTextView"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/header2"
                android:src="@drawable/empty_template"
                android:layout_below="@+id/header1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="32dp"
                android:adjustViewBounds="true"
                android:paddingBottom="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2"
                android:id="@+id/textView9"
                android:textSize="40sp"
                android:paddingLeft="36dp"
                android:textColor="#FFFFFFFF"
                android:textStyle="bold"
                android:paddingTop="56dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/header1"
                android:layout_toLeftOf="@+id/textView7"
                android:layout_toStartOf="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Statistics"
                android:id="@+id/textView10"
                android:textColor="#000000"
                android:paddingTop="60dp"
                android:paddingLeft="100dp"
                android:layout_below="@+id/header1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="3 LESSONS"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView10"
                android:layout_alignLeft="@+id/LessonTextView"
                android:layout_alignStart="@+id/LessonTextView"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/textView9"
                android:layout_alignRight="@+id/textView7"
                android:layout_alignEnd="@+id/textView7" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/header3"
                android:src="@drawable/empty_template"
                android:layout_below="@+id/header2"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="32dp"
                android:paddingBottom="0dp"
                android:adjustViewBounds="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/header4"
                android:src="@drawable/empty_template"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="80dp"
                android:paddingTop="32dp"
                android:layout_below="@+id/header3"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_alignBottom="@+id/header1"
                android:layout_alignRight="@+id/imageButton2"
                android:layout_alignEnd="@+id/imageButton2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/header1"
                android:background="@android:color/transparent"
                android:onClick="openMenu1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHORTCUT"
                android:id="@+id/shortcut"
                android:layout_alignTop="@+id/learnTextView"
                android:layout_centerHorizontal="true"
                android:onClick="toQuiz"/>


        </RelativeLayout>
    </LinearLayout>
</ScrollView>